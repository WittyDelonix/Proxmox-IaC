global:
  resolve_timeout: 5m

route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 12h
  receiver: 'self-healing-webhook'
  routes:
    # Route critical alerts to self-healing immediately
    - match:
        severity: critical
      receiver: 'self-healing-webhook'
      group_wait: 0s
      group_interval: 5s
      repeat_interval: 5m
    
    # Route warnings with longer intervals
    - match:
        severity: warning
      receiver: 'self-healing-webhook'
      group_wait: 30s
      group_interval: 5m
      repeat_interval: 30m

receivers:
  - name: 'self-healing-webhook'
    webhook_configs:
      - url: 'http://{{ hostvars[groups["self_healing"][0]].ansible_host }}:5000/webhook'
    discord_configs:
      - webhook_url: ''
        send_resolved: true
        max_alerts: 0

inhibit_rules:
  # Inhibit warning if critical is firing for same alert
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']